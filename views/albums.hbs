<h1 class="text-center m-4 pt-4">Artist Albums: {{artistName.name}}</h1>
<div class="cards-container d-flex justify-content-center flex-wrap">
  {{#each artistAlbums}}
    <div class="card w-25 m-2">
      <img src="{{images.[1].url}}" class="card-img-top h-75" alt="{{name}}">
      <div class="card-body bg-secondary text-light d-flex flex-column justify-content-center align-items-center p-1">
        <h5 class="card-title">{{name}}</h5>
        <a href="/tracks/{{id}}" class="btn btn-danger">View Tracks</a>
      </div>
    </div>
  {{/each}}
</div>